    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "wait-port": "^1.1.0"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": false,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true
  },
  "prettier": "@kamaalio/prettier-config",
  "packageManager": "pnpm@10.23.0"
