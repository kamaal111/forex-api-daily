  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamaal111/forex-api-daily.git"
  },
  "author": "Kamaal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kamaal111/forex-api-daily/issues"
  },
  "homepage": "https://github.com/kamaal111/forex-api-daily#readme",
  "dependencies": {
    "@google-cloud/firestore": "^8.0.0",
    "@google-cloud/functions-framework": "^4.0.1",
    "cheerio": "^1.1.2",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.28.5",
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.1",
    "@kamaalio/prettier-config": "^0.1.2",
    "@types/jest": "^30.0.0",
